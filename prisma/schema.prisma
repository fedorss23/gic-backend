generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  firstName           String   @default("")
  lastName            String   @default("")
  isActivated         Boolean? @default(false)
  actibationLink      String?  @map("activation_link")
  recoveryCode        String?  @map("recovery_code")
  role                String?
  phone               Int?
  address             String?  @default("")
  dateOfBirth         String?  @default("") @map("date_of_birth")
  placeOfBirth        String?  @default("") @map("place_of_birth")
  placOfResidence     String?  @default("") @map("place_of_residence")
  citizenship         String?  @default("")
  languageProficiency String?  @default("") @map("language_proficiency")
  rating              Int?     @default(0)
  blocked             Boolean? @default(false)
  country             String?  @default("")
  city                String?  @default("")
  avatar              String?  @default("")
  age                 Int?     @default(0)

  cars Car[]
  securities Security[]
  places Place[]
  bookings Booking[]
  events Event[]
  transfers Transfer[]
  flyings Flying[]
  yachts Yacht[]
  services Service[]

  messages  Message[]
  chats1    Chat[]   @relation("User1Chats")
  chats2    Chat[]   @relation("User2Chats")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Car {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  markName        String
  lineCar         String
  model           String
  raiting         Int?     @default(0)
  price           Int
  imageUrls       String?  @default("") @map("image_urls")
  isNew           Boolean? @default(false)
  isRecomended    Boolean? @default(false)
  representatives String?  @default("")
  description     String?  @default("")
  amenties        String?  @default("")
  location        String?  @default("")
  venichleClass   String
  bodyType        String
  year            Int
  fuelType        String
  maxPassangers   Int
  baggage         Int
  driver          String?  @default("")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

