generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_DATABASE_URL")
}


model User {
  id String @id @default(cuid())
  email String @unique
  password String
  firstName String @default("")
  lastName String @default("")
  isActivated Boolean? @default(false)
  actibationLink String? @map("activation_link")
  recoveryCode String? @map("recovery_code")
  role String?
  phone Int?
  address String? @default("")
  dateOfBirth String? @default("") @map("date_of_birth")
  placeOfBirth String? @default("") @map("place_of_birth")
  placOfResidence String? @default("") @map("place_of_residence")
  citizenship String? @default("")
  languageProficiency String? @default("") @map("language_proficiency")
  rating Int? @default(0)
  blocked Boolean? @default(false)
  country String? @default("")
  city String? @default("")
  avatar String? @default("")
  age Int? @default(0)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  physiques Physiques?
  educations Education[]
  militaries Military[]
  professions Profession[]
  missions Mission[]
  awards Award[]
  document Document[]

  @@map("user")
}


model Physiques {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  growth String @default("-")
  weight String @default("-")
  hairColor String @default("-") @map("hair_color")
  eyeColor String @default("-") @map("eye_color")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("physiques")
}

model Education {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  name String
  country String
  type String
  timeStart String @map("time_start")
  timeFinal String @map("time_final")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("education")
}

model Military {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  name String
  country String
  achievements String
  timeStart String @map("time_start")
  timeFinal String @map("time_final")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("military")
}

model Profession {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  isMilitary Boolean @default(false)

  name String
  country String
  tasks String
  timeStrart String @map("time_start")
  timeFinal String @map("time_final")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("profession")
}

model Mission {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  isMilitary Boolean @default(false)

  name String
  country String
  role String
  timeStart String @map("time_start")
  timeFinal String @map("time_final")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("mission")
}

model Award {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  isMilitary Boolean @default(false)

  name String
  country String
  achievements String
  time String @map("time_start")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("award")
}

model Document {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  classification String
  url String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("document")
}